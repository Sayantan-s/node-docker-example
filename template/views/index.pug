doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title B.Comm | #{title}
        link(rel="stylesheet" href="/index.css")
    body 
        main.content 
            if product.length > 0
               .container 
                    each item in product
                        .content-card 
                            h1.content-card--titel #{item.product}
            else 
                h1 No Products.