doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title BigComm | #{title}
        link(rel="stylesheet" href="/index.css")
        block moreCss
    body
        nav.navigation 
            each navEle in [{ route : '/',name : 'Home'},{ route : '/admin/add-item',name : 'Product' }]
                .navigation_ele
                    a(href=navEle.route,class=(`navigation_ele--link ${path === navEle.route ? 'isActive' : ''}`)) #{navEle.name}
        block content